/* packageMy/pages/mycoupon/mycoupon.wxss */

.mycounponPage .counponbox{
  width: 700rpx;
  margin:0 auto;
  margin-top: 40rpx;
}
.mycounponPage .counponbox .counpon{
    display: flex;
    height: 200rpx;
    border-radius: 20rpx;
    overflow: hidden;
    box-shadow: 0px 0px 6px 0px rgba(255, 247, 230, 100);
}
.counpon .leftdiscount{
  display: flex;
  align-items: center;
  position: relative;
  width:220rpx;
  height: 100%;
}
.counpon .leftdiscount image{
      position: absolute;
      width: 100%;
      height: 100%;
}
.leftdiscount .leftdiscountContent{
  position: relative;
  z-index: 99999;
}

.leftdiscountContent{
  display: flex;
  align-items: center;
  /* flex-direction:column; */
  flex-wrap: wrap;
  justify-content: center;
  color: white;
}
.leftdiscountContent .price{
  display: flex;
  align-items: flex-end;
  font-size: 40rpx;
}
.leftdiscountContent .price .num{
  font-size: 96rpx;
  line-height: 1;
}


.leftdiscountContent .meet{
  font-size: 28rpx;
}

.counpon .rightDate{
  position: relative;
  flex: 1;
  background-color: white;
  padding: 44rpx 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.rightDate .newCoupon{
  font-size: 36rpx;
  color: #5A5A5A;
}
.rightDate .disabled{
  font-size: 28rpx;
  color: #BFBFBF;
}
.rightDate .xieejiao{
  top: 0;
  right: 0;
  position: absolute;
  width: 126rpx;
  height: 128rpx;
  display:flex;

  justify-content: center;
}
.rightDate .xieejiao image{
    position: absolute;
    width: 100%;
    height: 100%;
}
 .rightDate .gdtext{
  font-size: 24rpx;
  transform: rotate(50deg);
  padding-top: 27rpx;
  color: white;
}