/* packageA/pages/orderDetails/orderDetails.wxss */
.orderDetails{
  width: 694rpx;
  margin:0 auto;
}
.orderDetails .address{
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  margin-top: 40rpx;
  padding:30rpx 30rpx;
  height: 358rpx;
  box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.4);
}
.orderDetails .address .addressItem{
  display: flex;
  align-items: center;
}
.orderDetails .address .addressicon{
    margin-right:30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 52rpx;
    height: 52rpx;
    border-radius: 52rpx;
}
.orderDetails .address .addressicon image{
  width: 40rpx;
  height: 40rpx;
}

.address .addressmsg{
  width: 566rpx;
}
.address .addressmsg .nameNumber{
    display: flex;
    padding-bottom: 6rpx;
    font-size: 30rpx;
}
.address .addressmsg .storeName{
    padding-right: 34rpx;
}
.copyNumber{
background-color: #d9f1cb;
color:#40B850;
font-size: 30rpx;
margin-left: 16rpx;
}
.addressDetail{
  display: inline-block;
  color: #999999;
  font-size: 24rpx;
  line-height: 36rpx;
}
.order{
  margin-top:48rpx;
  box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.4);
}
.order .orderWarn{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color:#EC0606;
  padding-top: 18rpx;
  padding-left: 34rpx;
}
.order .orderWarn .warnImg{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.order .orderWarn image{
width: 100%;
height: 100%;
}

.order .orderConter{
  padding:22rpx  72rpx 40rpx 72rpx;
}
.order .orderConter .expressNum{
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #4e148c;
  font-size: 32rpx;
  font-weight: 600;
}
.order .orderConter .expressNum image{
  padding-bottom: 10rpx;
  padding-right:6rpx ;
  width: 18rpx;
  height: 18rpx;
}
.expressNumipt{
  padding-left: 16rpx;
  box-sizing: border-box;
  width: 374rpx;
  font-size: 30rpx;
  color: #ccc;
  font-weight: 400;
  border: 1px #ccc solid;
  /* margin-left: 30rpx; */
  height: 52rpx;
  border-radius: 14rpx;
}

.textField{
  box-sizing: border-box;
  padding: 14rpx;
  border: 2rpx #ccc solid;
  width: 550rpx;
  margin-top: 30rpx;
  height: 200rpx;
  border-radius: 14rpx;
}
.orderContent{
  margin-top: 48rpx;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.4);
}
.orderContent .orderMsg{
    font-size: 28rpx;
    padding-bottom: 22rpx;
}
.orderContent .orderMsg .orderMsgText{
    box-sizing: border-box;
    padding-left: 16rpx;
}
.orderContent .orderMsg .copyOrderCode{
margin-left: 30rpx;
width: 42rpx;
height: 24rpx;
background-color: #d9f1dd;
color:#40B850;
font-size: 22rpx;
}

.btn{
  /* position: fixed; */
  padding-top: 100rpx;
  bottom: 0;
  display: flex;
  width: 100%;
  height: 114rpx;
}

.btn .call{
 color: white;
 background-color: #4c168e;
}
.btn .cancelOrder{
 color: black;
 background-color: #e2e2e2;
}
.btn .btnCom{
  display: flex;
  align-items: center;
  justify-content: center;
  width:50%;
  height: 100%;
  color: 36rpx;
}
.expressItemOrder {
    margin-top: 38rpx;
}
.expressItemOrder .item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.expressItemOrder .item .orederCodeInput{
  position: relative;
}
.expressItemOrder .item .ipt{
  box-sizing: border-box;
  width: 504rpx;
  height: 60rpx;
  border: 1px #ccc solid;
  border-radius: 10rpx;
  font-size: 28rpx;
  padding-left: 16rpx;
}

.expressItemOrder .item .delete{
  position: absolute;
  top:50%;
  z-index: 999999;
  margin-top:-20rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
}
.expressItemOrder .item .delete image{
width: 100%;
height: 100%;
}
.expressItemOrder .addOrderCode{
  justify-content: space-evenly;
  width: 222rpx;
  height: 52rpx;
  color: #40B850;
  border: 1px #40B850 solid;
  border-radius: 30rpx;
  font-size: 24rpx;
  margin-left: 310rpx;
}