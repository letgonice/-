/* packageA/pages/paydetail/paydetail.wxss */
.payDetail{
  width: 694rpx;
  margin:0 auto;
}
.payDetail .address{
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.4);
  margin-top: 18rpx;
  height: 200rpx;
}
.payDetail .variousMsg{
  box-sizing: border-box;
  padding: 26rpx 30rpx;
    height: 716rpx;
    margin-top: 28rpx;
    box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.4);
}
.payDetail .variousMsg .variousItem{
    margin-bottom: 22rpx;
    font-size: 28rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.payDetail .variousMsg .youhjuan{
  margin: 0;
}
.leftYouHui{
  display: flex;
  align-items: center;
  justify-content: center;
}
.leftYouHui image{
        padding-right: 16rpx;
        width: 38rpx;
        height: 38rpx;
}
.rightYh{
  display: flex;
}

.selectcoupon .warning {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}
.selectcoupon{
    margin-top: 10rpx;
    display: flex;
    padding-bottom: 18rpx;
    border-bottom:1px #bbbbbb solid;
    font-size: 20rpx;
    color:#ed4946;
}
.selectcoupon .warning  image {
  width: 100%;
  height:100%;
}
.case{
  box-sizing: border-box;
  padding:40rpx 0;
  display: flex;
  justify-content: flex-end;
  font-size: 28rpx;
}
.case .jiesuan{
    font-size: 28rpx;
    font-weight: 700;
    padding-left: 6rpx;
}
.case .reduce{
  padding: 10rpx;
  color: #f0954e;
}

.payPrice{
  position: absolute;
  bottom: 0;
  display: flex;
  width: 750rpx;
  height: 132rpx;
  border-top: 2rpx solid #ccc;
  z-index: 999;
  background-color: white;
}
.payPrice .allPrice{
  box-sizing: border-box;
  padding-top: 14rpx;
  padding-left:20rpx;
  width: 496rpx;
}
.payPrice .allPrice .price{
    font-size: 28rpx;
}
.payPrice .allPrice .pact{
    box-sizing: border-box;
    padding-top: 10rpx;
    font-size: 28rpx;
}
.payPrice .van-button{
  flex: 1;
  width:262rpx ;
  height: 100%;
  border: none;
  font-size: 36rpx;
  color: #F5E4AD;
  background-color:#274f05;
}

.payPopul .van-popup{
  padding:20rpx 20rpx 100rpx 20rpx;
  font-size: 28rpx;
  margin-bottom: 130rpx;
}
.consent{
  margin: 20rpx auto;
  font-size: 40rpx;
  color: white;
  width: 446rpx;
  height: 90rpx;
  background-color: #e7691d;
  border-radius: 40rpx;
}


.selectCouponBox{
  /* padding:14rpx; */
}
.selectCouponBox .selectCoupon{
  position: relative;
  text-align: center;
  margin:  40rpx 0 ;
  font-size: 40rpx;
}
.selectCoupon .quitselectCoupon{
  position:  absolute;
  right: 60rpx;
  top: 10rpx;
}