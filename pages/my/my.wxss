.my .head{
  display: flex;
  box-sizing: border-box;
  padding-left: 48rpx;
  padding-top: 30rpx;
  width: 100%;
  height: 230rpx;
  background-color: #e7691d;
}
.my .head .avatar image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 140rpx;
}
.my .user{
  display: flex;
  flex-direction: column;
  justify-content:space-between;
  height: 140rpx;
  padding-left: 40rpx;
}
.my .user .name{
  padding-left: 24rpx;
  font-size: 48rpx;
  line-height: 50rpx;
  color: white;
}
.my .user .code{
font-size: 28rpx;
color: white;
}

.myBody{
  width: 720rpx;
  margin:0 auto;
}

.myBody .mybodyCommon{
  box-shadow: 0 4rpx 12rpx 0 rgba(0,0,0,0.4);
  border-radius: 20rpx;
  overflow: hidden;
}

.myBody .myOrder{
  margin-top: 32rpx;
  height: 264rpx;
}
.myBody .myOrder .van-grid{
  margin-top: 16rpx;
}

.myBody .endCell{
    height: 602rpx;
    margin: 28rpx 0;
}
.myBody .endCell .allContent{
  margin-top: 10rpx;
}