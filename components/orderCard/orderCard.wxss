/* components/orderCard/orderCard.wxss */
.orderCard{
  width: 694rpx;
  height: 326rpx;
  box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.4);
  margin: 28rpx auto;
  border-radius: 10rpx;
}

.orderCard .orderNumber{
  display: flex;
  align-items: center;
  padding:24rpx;
  font-size: 28rpx;
}
.orderCard .orderNumber .copyOrder{
    font-size: 22rpx;
    background-color:#d9f1dd;
    color: #40B850;
    padding: 0 8rpx;
    border-radius:6rpx;
    margin-left: 20rpx;
}
.orderCard .orderCneter{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 50rpx 150rpx 0;
  font-size: 36rpx;
}
.orderCard .orderCneter .orderFly{
  width: 64rpx;
  height: 64rpx;
}
.orderCard .orderCneter{
  display: flex;
}
.orderCard .orderCneter .orderFly image{
  width: 100%;
  height: 100%;
}


.btnBox{
  margin-top: 28rpx;
  display: flex;
  justify-content:flex-end;
}
.orderCard .status{
  text-align: center;
  font-size: 28rpx;
  color: #4C168E;
  line-height: 20rpx;
}
.orderCard .van-button{
  width: 160rpx;
  height: 60rpx;
  border-radius: 10rpx;
  padding: 0;
}
.orderCard .detail .van-button{
  background-color: #4c168e;
  color: white;
  margin-right:40rpx;
  margin-left:20rpx;
}
.orderCard .statusBtn .van-button{
  box-sizing: border-box;
  width: 154rpx;
  height: 58rpx;
  color: #EC0606;
  border: 2rpx solid #EC0606;
}